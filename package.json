{
  "name": "vs-code-ext-mule-munit-helper",
  "displayName": "vs-code-ext-mule-munit-helper",
  "description": "Run and visualize MUnits from VSCode",
  "version": "0.0.1",
  "author": "ArthurSpark",
  "publisher": "ArthurSpark",
  "icon": "images/icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/DasArthur/vs-code-ext-mule-munit-helper.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other", "Debuggers"
  ],
  "keywords": [
    "mule",
    "munit",
    "mule4",
    "munit4",
    "mulesoft",
    "munit-visualizer"
  ],
  "activationEvents": [
    "workspaceContains:*.xml",
    "workspaceContains:**/*.xml",
    "onLanguage:xml",
    "onLanguage:mule-xml"
	],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "MUnit",
      "properties": {
        "munit.attributes": {
          "type": "string",
          "default": "",
          "description": "Munit attributes like -Denv=dev"
        },
        "munit.showWelcome": {
          "type": "boolean",
          "default": true,
          "description": "Are attributes defined?"
        }
      }
    },
    "viewsContainers": {
          "activitybar": [
              {
                  "id": "munitcontainer",
                  "title": "MUnit",
                  "icon": "images/icon-action.svg"
              }
          ]
      },
      "views": {
          "munitcontainer": [
            {
              "id": "munitview",
              "name": "MUnit",
              "type": "webview"
             }
          ]
      },
      "viewsWelcome": [
        {
          "view": "munitview",
          "contents": "To run MUnit tests, you need to configure the MUnit attributes.\n[Add MUnit Run Config](command:extension.addMunitRunConfig)",
          "when": "config.munit.attributes == ''"
        }
      ],
      "commands": [
          {
            "command": "extension.munit",
            "title": "Run All MUnits"
          },
          {
            "command": "extension.addMunitRunConfig",
            "title": "Add MUnit Run Config"
          }
      ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  }
}
